#include <Wire.h> 
#include <LiquidCrystal_I2C.h>
LiquidCrystal_I2C lcd(0x27,2,1,0,4,5,6,7,3,POSITIVE);  // Set the LCD I2C address

const byte chars[8][8] = {
  {0x15,0xA,0x15,0xA,0x15,0xA,0x15,0xA},
  {0xA,0x15,0xA,0x15,0xA,0x15,0xA,0x15},
  {0x3,0x6,0xC,0x18,0x18,0xC,0x6,0x3},
  {0x18,0xC,0x6,0x3,0x3,0x6,0xC,0x18}
};

void setup() {
  lcd.begin(16,2);
  for(int i = 0; i < 8; i++){
    lcd.createChar(i,(byte *)chars[i]);
  }
  lcd.home();
  lcd.print("Characters! Ya!");
  lcd.setCursor(0,1);
  for(int i = 0; i < 8; i++){
    lcd.print(char(i));
  }
}

void loop() {
  //looping
}
